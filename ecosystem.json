// http://nicmitchell.com/2015/04/deploying-node-js-applications-with-pm2/
{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [

    // First application
    {
      "name"      : "downtime",
      "script"    : "bin/www",
      "env": {
        COMMON_VARIABLE: "true"
      },
      env_production : {
        NODE_ENV: "production"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy" : {
    "production" : {
      "user" : "runner",
      "host" : "52.36.39.70",
      "ref"  : "origin/master",
      "repo" : "git@github.com:jayoharedee/downtime.git",
      "path" : "/var/www/downtime",
      "post-deploy" : "npm install ; gulp; pm2 startOrRestart ecosystem.json --env production"
    },
    "dev" : {
      "user" : "dev",
      "host" : "127.0.0.1",
      "ref"  : "origin/master",
      "repo" : "git@github.com:jayoharedee/downtime.git",
      "path" : "/Users/dev/dev/sand/downtime",
      "post-deploy" : "npm install ; pm2 startOrRestart ecosystem.json --env dev",
      "env"  : {
        NODE_ENV: "dev"
      }
    }
  }
}
